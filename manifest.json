{
  "manifest_version": 3,
  "name": "Notes Sync Extension",
  "version": "1.1",
  "description": "Write notes locally and sync them to Notion automatically.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.notion.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.svg"
    }
  },
  "background": {
  },
  "icons": {
    "48": "icons/icon48.svg"
  }
}